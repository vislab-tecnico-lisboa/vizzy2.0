<!--
  * Main changes from ROS1 to ROS2:
  *  - 'arg' tags in substitutions are replaced with 'var' tags (not in declarations).
-->

<launch>
    <arg name="odom_topic" default="odometry" description="The name of the final odometry topic to be published."/>

    <node pkg="segway_rmp_ros2"
          exec="segway_rmp_ros2_node"
          name="segway_rmp_ros2_node"
          output="screen"
          on_exit="shutdown">
      
      <remap from="odom" to="$(var odom_topic)" />

    </node>

</launch>
