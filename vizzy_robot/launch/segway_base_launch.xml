<!--
  * Main changes from ROS1 to ROS2:
  *  - 'arg' tags in substitutions are replaced with 'var' tags (not in declarations).
-->

<launch>
  <arg name="vizzy_machine_name" default="$(var vizzy_machine_name)" />

  <!-- Launch Segway driver -->
  <node machine="$(var vizzy_machine_name)" name="segway_rmp_ros2_node" pkg="segway_rmp_ros2" type="segway_rmp_ros2_node" output="screen" required="true">
    <remap from="~odom" to="odometry" />
  </node>

</launch>
