<!--
  * Main changes from ROS1 to ROS2:
  *  - 'arg' tags in substitutions are replaced with 'var' tags (not in declarations).
-->

<launch>
    <node pkg="segway_rmp_ros2"
          exec="segway_rmp_node_ros2"
          name="segway_rmp_node_ros2"
          output="screen"
          on_exit="shutdown">
          <param name="odom_frame_id" value="odometry" />
          <param name="frame_id" value="base_footprint" />
    </node>
</launch>
